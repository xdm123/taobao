

.goodslistwrap{
  padding:20rpx;
  overflow: hidden;
}
.goods_pic_wrap{
  width: 250rpx;
  height: 250rpx;
  border-radius: 10rpx;
  float:left;
  margin-right: 20rpx;
}
.goods_pic{
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}
.goods_title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color:#333;
  font-size: 32rpx;
}
.goods_shopname{
  color:#999;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.goods_price{
  display: flex;
  align-items: center;
}
.goods_price{
  margin-top:10rpx;
  font-size: 28rpx;
  color:#666;
}
.final_price{
  margin-left: 20rpx;
  color:rgb(239, 54, 54);
}

.goods_price view:nth-child(2){
  text-decoration: line-through;
}
.goods_price view:nth-child(4){
  color:rgb(239, 54, 54);
  font-weight: 600;
  font-size: 36rpx;
