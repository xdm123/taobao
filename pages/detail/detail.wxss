/* pages/categary/categary.wxss */
page {
  height: 100%;
}

.exit {
  width: 65rpx;
  height: 65rpx;
  position: fixed;
  left: 60rpx;
  top: 50rpx;
  z-index: 99;
}

.slide-image {
  width: 100%;
  /* height: 500rpx; */
}

/* 主图 */
.pict_image {
  width: 100%;
  height: 700rpx;
}

.swiper {
  height: 600rpx;
}

.desc_wrap {
  padding: 10rpx 30rpx;
}

.price view {
  display: inline-block;
}

.the_final_price {
  color: red;
  margin-left: 5rpx;
  font-size: 50rpx;
}

.price_tag {
  color: red;
  font-size: 35rpx;
}

.reserve_price {
  vertical-align: top;
  text-decoration: line-through;
  color: #bababa;
}

.volume {
  margin-top: 15rpx;
  color: #bababa;
  font-size: 22rpx;
}

.title {
  margin-top: 30rpx;
  font-size: 30rpx;
}

.nick_cont_wrap {
  margin-top: 15rpx;
}

.nick_wrap {
  padding: 0rpx 30rpx;
}

.nick_wrap view {
  display: inline-block;
}

.bg_bar {
  width: 100%;
  height: 10rpx;
  background-color: #cbcbcb;
}

.nick_icon {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.nick {
  /* height: 50rpx; */
  line-height: 100rpx;
  margin-left: 15rpx;
}

.text_tag {
  /* padding: 30rpx 30rpx; */
  font-size: 22rpx;
  color: #cbcbcb;
  margin-left: 15rpx;
}

.text_bar {
  vertical-align: middle;
  width: 6rpx;
  height: 24rpx;
  background-color: red;
}

.text_wrap view {
  display: inline-block;
}

.text_wrap {
  padding: 22rpx 30rpx;
}

/* 抬高imgesList列表 */
.images_wrap {
  margin-bottom: 100rpx;
}

/* 详情图 */
.detail_image {
  width: 100%;
  height: 620rpx;
}

.fixedShareBar {
  width: 100%;
  position: fixed;
  bottom: 0;
  padding: 30rpx 30rpx;
  background-color: white;
}

.toIndexImg {
  vertical-align: middle;
  width: 45rpx;
  /* margin-left: 30rpx; */
  height: 45rpx;
}

.b-toIndex {
  margin-left: 30rpx;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
}

.b-toIndex view {
  display: inline-block;
}

.text_shouye {
  margin-top: 10rpx;
  font-size: 22rpx;
}

/* 分享与购买 */
.share_wrap {
  position: absolute;
  right: 100rpx;
  bottom: 20rpx;
}

.share_wrap view {
  display: inline-block;
  color: white;
  padding: 20rpx 40rpx;

}

.share_wrap .share {
  border-radius: 40rpx 0 0 40rpx;
  background-color: rgb(214, 171, 79);
}

.share_wrap .buy {
  border-radius: 0 40rpx 40rpx 0;
  background-color: rgb(204, 44, 44);
}

/* 对话框 */
.couponDialog {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  background-color: rgb(92, 85, 85, 0.6);
}
.dialogContent{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 500rpx;
  background-color: white;

}