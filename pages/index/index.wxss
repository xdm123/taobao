/* pages/index/index.wxss */

/* banner */
.banner_wrap{
  position: absolute;
  left: 50%;
  top: 170rpx;
  margin-left: -350rpx;
  /* text-align: center; */
}
.swiper{
  width: 700rpx;
  height: 310rpx;
}
.banner-image{
  width: 700rpx;
  height: 310rpx;
  border-radius: 20rpx;
}
.index_bg {
  width: 100%;
}

.titleBar {
  position: fixed;
  width: 100%;
}

#floatMirror {
  width: 100%;
}

.theFixed {
  left: 0;
  top: 0;
  position: fixed;
  z-index: 99;
}

.reset {
  position: static;
}

.D-margin-top {
  margin-top: 110rpx;
}

.S-margin-top {
  margin-top: 0rpx;
}

.goodslistwrap {
  padding: 20rpx;
  overflow: hidden;
}

.goods_pic_wrap {
  width: 250rpx;
  height: 250rpx;
  border-radius: 10rpx;
  float: left;
  margin-right: 20rpx;
}

.goods_pic {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}

.goods_title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
  font-size: 32rpx;
}

.goods_shopname {
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.goods_price {
  display: flex;
  align-items: center;
}

.goods_price {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.final_price {
  margin-left: 20rpx;
  color: rgb(239, 54, 54);
}

.goods_price view:nth-child(2) {
  text-decoration: line-through;
}

.goods_price view:nth-child(4) {
  color: rgb(239, 54, 54);
  font-weight: 600;
  font-size: 36rpx;
}

.goods_type {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.swiper_wrap {
  width: 100%;
  /* height:300rpx; */
  padding: 30rpx 0;
  background: #fff;
  color: #333;
  margin-top: 40rpx;
}

swiper {
  height: 310rpx;
}

.type_swiper swiper-item {
  /* display: flex; */
  overflow: hidden;
  flex-wrap: wrap;
  justify-content: space-between;
}

.type_swiper swiper-item .index_type {
  width: 20%;
  margin-bottom: 30rpx;
  text-align: center;
  float: left;
}

.itempic {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.itempic image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
/* 拼多多 分享 tag */
.pdd_share_tag{
  color: #ababab;
}