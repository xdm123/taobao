/* pages/index/index.wxss */

page {
  background-color: #efefef;
}

/* banner */
.banner_wrap {
  position: absolute;
  left: 50%;
  top: 170rpx;
  margin-left: -350rpx;
  /* text-align: center; */
}

.swiper {
  width: 700rpx;
  height: 310rpx;
}

.banner-image {
  width: 700rpx;
  height: 310rpx;
  border-radius: 20rpx;
}

.index_bg {
  width: 100%;
}

.titleBar {
  position: fixed;
  width: 100%;
}

#floatMirror {
  width: 100%;
}

.theFixed {
  left: 0;
  top: 0;
  position: fixed;
  z-index: 99;
}

.reset {
  position: static;
}

.D-margin-top {
  margin-top: 110rpx;
}

.S-margin-top {
  margin-top: 0rpx;
}

.swiper_wrap {
  width: 100%;
  /* height:300rpx; */
  padding: 30rpx 0;
  background: #fff;
  color: #333;
  margin-top: 40rpx;
}

swiper {
  height: 310rpx;
}

.type_swiper swiper-item {
  /* display: flex; */
  overflow: hidden;
  flex-wrap: wrap;
  justify-content: space-between;
}

.type_swiper swiper-item .index_type {
  width: 20%;
  margin-bottom: 30rpx;
  text-align: center;
  float: left;
}

.itempic {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.itempic image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

